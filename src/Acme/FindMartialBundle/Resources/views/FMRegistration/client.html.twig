{% extends "AcmeFindMartialBundle::layout.html.twig" %}

{% block title "FindMartial" %}

{% block content %}
    <h1>{{ 'client.register'|trans({}, 'FindMartialBundle') }}</h1>

    <form action="{{ path('reg_user',{'type': 'client'}) }}" method="post" {{ form_enctype(form) }}>

		{{ form_row (form.username) }}
		{{ form_row (form.email) }}
		{{ form_row (form.plainPassword) }}


        {{ form_widget(form.client) }}

		{{ form_rest(form) }}

        <p>
            <button type="submit">{{ 'field.create'|trans({}, 'FindMartialBundle') }}</button>
        </p>
    </form>


{% endblock %}
