{% extends "AcmeFindMartialBundle::layout.html.twig" %}

{% block title "FindMartial" %}

{% block content %}
    <h1>Art list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>ID</th>
                <th>{{ 'field.name'|trans({}, 'FindMartialBundle') }}</th>
                <th>{{ 'field.type'|trans({}, 'FindMartialBundle') }}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('art_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.type }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('art_show', { 'id': entity.id }) }}">{{ 'field.show'|trans({}, 'FindMartialBundle') }}</a>
                    </li>
                    <li>
                        <a href="{{ path('art_edit', { 'id': entity.id }) }}">{{ 'field.edit'|trans({}, 'FindMartialBundle') }}</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('art_new') }}">
                {{ 'field.createnew'|trans({}, 'FindMartialBundle') }}
            </a>
        </li>
    </ul>
    {% endblock %}
