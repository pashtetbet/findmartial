    {% javascripts
        '@AcmeFindMartialBundle/Resources/public/js/masterForm.js'
     %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block content %}
    <h1>{{ 'master.register'|trans({}, 'FindMartialBundle') }}</h1>


    <ul class="switcher">
