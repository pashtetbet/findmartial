	    <div class = "switcher_block block2">
	    	{% include 'AcmeFindMartialBundle:Master:formArtsBlock.html.twig' %}
	    </div>
	    <div class = "switcher_block block3">
	    	{% include 'AcmeFindMartialBundle:Master:formPhotosBlock.html.twig' %}
	    </div>
    </div>

{% endblock %}
