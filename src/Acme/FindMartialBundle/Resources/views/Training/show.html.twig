{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Training</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ entity.type }}</td>
            </tr>
            <tr>
                <th>Age_low</th>
                <td>{{ entity.agelow }}</td>
            </tr>
            <tr>
                <th>Age_max</th>
                <td>{{ entity.agemax }}</td>
            </tr>
            <tr>
                <th>Is_checked</th>
                <td>{{ entity.ischecked }}</td>
            </tr>
            <tr>
                <th>Visible</th>
                <td>{{ entity.visible }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('training') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('training_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('training_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
